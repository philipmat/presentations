<div id="helpDeskModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">Submit HelpDesk Request</div>
            <div class="modal-body">
                <form role="form" action="false">
                    <div class="form-group">
                        <label>Your name</label>
                        <input id="help-name" type="text" value="" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>What can we help you with?</label>
                        <textarea name="help-request-message" id="help-message" cols="10" rows="4" class="form-control"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-default" data-dismiss="modal">Close</button>
                <button id="help-desk-submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </div>
</div>
<div id="helpDeskChat" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">HelpDesk Chat</div>
            <div class="modal-body">
                <div id="help-chat"></div>
                <form class="form-inline" role="form" action="false">
                    <div class="form-group">
                        <label class="sr-only">Message</label>
                        <input id="help-message" type="text" value="" class="form-control" />
                    </div>
                    <button id="help-desk-submit-message" class="btn btn-primary">Send</button>
                </form>
            </div>
        </div>
    </div>
</div>